@page
@model vosplzen.sem1h3.Pages.InventoryPages.CreateModel
@{
}


<h1>Vytvoření itemu</h1>
<hr />

<form method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label>Title</label>
        <input asp-for="@Model.Item.Title" class="form-control" />
        <span asp-validation-for="@Model.Item.Title" class="bg-warning"></span>
    </div>
    <div class="form-group">
        <label>Serial number</label>
        <input asp-for="@Model.Item.SerNum" class="form-control" />
        <span asp-validation-for="@Model.Item.SerNum" class="bg-warning"></span>
    </div>

    <button class="btn btn-primary" type="submit">
        Odeslat
    </button>

</form>
@page
@model vosplzen.sem1h2.Pages.UserPages.EditModel
@{
}

<form method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label>Křestní</label>
        <input asp-for="@Model.EditUser.Firstname" class="form-control" />
        <span asp-validation-for="@Model.EditUser.Firstname" class="bg-warning"></span>
    </div>

    <div class="form-group">
        <label>Příjmení</label>
        <input asp-for="@Model.EditUser.Lastname" class="form-control" />
        <span asp-validation-for="@Model.EditUser.Lastname" class="bg-warning"></span>
    </div>

    <div class="form-group">
        <label>Identifikátor</label>
        <input asp-for="@Model.EditUser.PersonalId" class="form-control" />
        <span asp-validation-for="@Model.EditUser.PersonalId" class="bg-warning"></span>
    </div>

    <input asp-for="@Model.EditUser.Id" hidden/>

    <button class="btn btn-primary" type="submit">
        Odeslat
    </button>

</form>
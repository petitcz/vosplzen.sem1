@page
@model vosplzen.sem1h2.Pages.UserPages.CreateModel
@{
}


<h1>Vytvoření uživatele</h1>
<hr />



<form method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label>Křestní</label>
        <input asp-for="@Model.User.Firstname" class="form-control" />
        <span asp-validation-for="@Model.User.Firstname" class="bg-warning"></span>
    </div>
    <div class="form-group">
        <label>Příjmení</label>
        <input asp-for="@Model.User.Lastname" class="form-control" />
        <span asp-validation-for="@Model.User.Lastname" class="bg-warning"></span>
    </div>
    <div class="form-group">
        <label>Identifikátor</label>
        <input asp-for="@Model.User.PersonalId" class="form-control" />
        <span asp-validation-for="@Model.User.PersonalId" class="bg-warning"></span>
    </div>

    <button class="btn btn-primary" type="submit">
        Odeslat
    </button>

</form>